<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.homecookinrecipes.ui.SpinResult">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/spinner_image_width"
        android:layout_height="@dimen/spinner_image_height"
        android:layout_marginBottom="@dimen/spinner_image_margin"
        android:layout_marginLeft="@dimen/spinner_image_margin"
        android:layout_marginStart="@dimen/spinner_image_margin"
        android:layout_marginRight="@dimen/spinner_image_margin"
        android:layout_marginEnd="@dimen/spinner_image_margin"
        android:layout_marginTop="@dimen/spinner_image_margin_top"
        android:src="@drawable/place_holder_image"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.022"
        tools:layout_editor_absoluteX="-90dp"
        tools:layout_editor_absoluteY="-12dp" />

    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="@dimen/spinner_text_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spinner_text_margin"
        android:layout_marginStart="@dimen/spinner_text_margin"
        android:layout_marginRight="@dimen/spinner_text_margin"
        android:layout_marginEnd="@dimen/spinner_text_margin"
        android:layout_marginTop="@dimen/spinner_text_margin"
        android:gravity="center"
        android:textColor="@color/primaryText"
        android:text="@string/text_place_holder"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/publisher_tv"
        android:layout_width="@dimen/spinner_text_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spinner_text_margin"
        android:layout_marginRight="@dimen/spinner_text_margin"
        android:layout_marginTop="@dimen/spinner_text_margin"
        android:gravity="center"
        android:textColor="@color/secondaryText"
        android:text="@string/text_place_holder"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        ads:layout_constraintHorizontal_bias="0.0"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/recipe_title" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/spinner_ratingbar_margin"
        android:layout_marginStart="@dimen/spinner_ratingbar_margin"
        android:layout_marginRight="@dimen/spinner_ratingbar_margin"
        android:layout_marginEnd="@dimen/spinner_ratingbar_margin"
        android:layout_marginTop="@dimen/spinner_ratingbar_margin"
        android:isIndicator="true"
        ads:layout_constraintTop_toBottomOf="@+id/publisher_tv" />

    <Button
        android:id="@+id/view_recipe"
        android:layout_width="@dimen/spinner_button_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spinner_button_margin"
        android:layout_marginStart="@dimen/spinner_button_margin"
        android:layout_marginRight="@dimen/spinner_button_margin"
        android:layout_marginEnd="@dimen/spinner_button_margin"
        android:layout_marginTop="@dimen/spinner_button_margin"
        android:text="@string/view_recipe_label"
        android:onClick="viewRecipe"
        android:background="@color/lightGreen"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <Button
        android:id="@+id/recipe_spin"
        android:layout_width="@dimen/spinner_button_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spinner_button_margin"
        android:layout_marginStart="@dimen/spinner_button_margin"
        android:layout_marginRight="@dimen/spinner_button_margin"
        android:layout_marginEnd="@dimen/spinner_button_margin"
        android:layout_marginTop="@dimen/spinner_button_margin"
        android:text="@string/spin_again_label"
        android:onClick="spinAgain"
        android:background="@color/lightRed"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/view_recipe" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spinner_ad_margin"
        android:layout_marginLeft="@dimen/spinner_ad_margin"
        android:layout_marginStart="@dimen/spinner_ad_margin"
        android:layout_marginRight="@dimen/spinner_ad_margin"
        android:layout_marginEnd="@dimen/spinner_ad_margin"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/spinner_ad_margin"
        ads:layout_constraintTop_toBottomOf="@+id/recipe_spin"
        ads:layout_constraintHorizontal_bias="0.499"
        ads:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout></ScrollView>